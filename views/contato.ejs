<%- include("header.ejs") %>
<%- include("nav.ejs") %>

    <!-- =============== Conteúdo ================== -->
    <div class="container mt-5 pt-5">
        <header>
            <h1>Books Online
                <small>Market Place de Livros</small></h1>
                <h3 class="font-weight-bold"><%=promo%></h3>
                <% if(promo){ %>
                    <p>Compre agora o novo livro <b><%=livro[0].titulo%></b></p>
                    <% } %>
            
        </header>

        <!--Form Contato -->
        <h2 class="alert alert-info">Envie sua mensagem</h2>
        <form action="" method="POST" class="mt-5 mb-5">
            <div class="form-group">
              <label for="cad_nome">Nome</label>
              <input type="text" class="form-control col-lg-9" id="cad_nome" placeholder="Seu nome aqui" name="cad_nome">
            </div>
            <div class="form-group">
              <label for="cad_sobrenome">Sobrenome</label>
              <input type="text" class="form-control col-lg-9" id="cad_sobrenome" placeholder="Seu sobrenome aqui" name="cad_sobrenome">
            </div>
            <div class="form-group">
              <label for="cad_email">Email</label>
              <input type="email" class="form-control col-lg-9" id="cad_email"  name="cad_email" placeholder="Seu email aqui">
            </div>        
            <div class="form-group">
              <label for="cad_mensagem">Mensagem</label>
              <textarea name="cad_mensagem" class="form-control col-lg-9"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Confirmar</button>
          </form>

        <!-- =============== Produtos ================== -->
        <div class="row">
            <!--Inicio da single-->
            <div class="livro col-md-16 col-sm-16 col-lg-10">
                <div class="card">
                    <img class="card-img-top w-25" src="books/<%=galeria[0].imagem%>" alt="Card image cap">
                    <div class="card-body">
                        <h4 class="card-title"><%=galeria[0].titulo%></h4>
                        <p class="card-text"><%=galeria[0].resumo%></p
                        <h2>R$ <%=galeria[0].valor%></h2>
                        <a href="carrinho/?id=<%=galeria[0].livros_id%>" class="btn btn-primary">Adicionar ao carrinho</a>
                    </div>
                </div>
            </div>
            <!--Fim do bloco da Iteração-->

        </div>
        <!-- =============== Fim dos Produtos ================== -->

        <!-- =============== Paginação ================== -->
        <nav>
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                <li class="page-item active">
                    <a class="page-link" href="#">1</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">2</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">3</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- =============== Fim da Paginação ================== -->
    </div>
    <!-- =============== Fim do Conteúdo ================== -->

<!-- =============== FOOTER ================== -->
<%- include("footer.ejs") %>

</body>
</html>
<!-- =============== Fim FOOTER ================== -->