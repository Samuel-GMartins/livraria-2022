<%- include("header.ejs") %>
<%- include("nav.ejs") %>

<!-- =============== Conteúdo ================== -->
<div class="container mt-5 pt-5">
    <header>
        <h1>Books Online
            <small>Market Place de Livros</small></h1>
        <h3 class="font-weight-bold"><%=promo%></h3>
        <% if(promo){ %>
        <p>Compre agora o novo livro <b><%=livro[0].titulo%></b></p>
        <% } %>

    </header>

    <div>
        <h5>Confira outros Títulos</h5>
        <ul>
            <%livro.forEach((item,n)=> {
                    if (n>0){
                    %>
            <li><%=n%> - <%=item.titulo%> - <%=item.genero%> - <%=item.nome%></li>
            <% }
                })%>
        </ul>

    </div>
    <!-- =============== Produtos ================== -->
    <div class="row">
        <!--Inicio da Iteração-->
        <%galeria.forEach((item)=> { %>
        <div class="livro col-md-16 col-sm-16 col-lg-3">
            <div class="card">
                <a href="/single-produto?id=<%=item.livros_id%>">
                    <img class="card-img-top" src="books/<%=item.imagem%>" alt="Card image cap">
                </a>
                <div class="card-body">
                    <h4 class="card-title"><%=item.titulo%></h4>
                    <p class="card-text"><%=item.resumo%></p>
                    <h2>R$ <%=item.valor%></h2>
                    <button data-id="<%=item.livros_id%>" data-produto="<%=item.titulo%>" data-valor="<%=item.valor%>" class="btn btn-primary bt-carrinho">Adicionar ao carrinho</button>
                </div>
            </div>
        </div>
        <% }) %>
        <!--Fim do bloco da Iteração-->

    </div>
    <!-- =============== Fim dos Produtos ================== -->

    <!-- =============== Paginação ================== -->
    <nav>
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            <li class="page-item active">
                <a class="page-link" href="#">1</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">2</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">3</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    </nav>
    <!-- =============== Fim da Paginação ================== -->
</div>
<!-- =============== Fim do Conteúdo ================== -->

<!-- =============== FOOTER ================== -->
<%- include("footer.ejs") %>

</body>
<script src="js/controle.js"></script>

<script>
    $().ready(function () {
        console.log('footer.ejs')
        $('.bt-carrinho').click(function(){

            let dataid =$(this).attr('data-id')
            let dataProduto =$(this).attr('data-produto')
            let dataValor =$(this).attr('data-valor')

            $.post("/carrinho",{
                livros_id:dataid,
                produto: dataProduto,
                quantidade:1,
                valor: dataValor
            },
            function(data,status){

                location.href='/carrinho'
            },'json')
        })
    })
</script>

</html>
<!-- =============== Fim FOOTER ================== -->